<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :map_url %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :image_url %>
  <%= f.input :description %>
  <%= f.input :map_html %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
