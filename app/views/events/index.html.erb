<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:map_url) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %> - <%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:map_html) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.id, event_path(event) %></td>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
<% if event.map_url.length > 21 %>
        <td><%= event.map_url[0..20] %>...</td>
<% elsif event.map_url.length == 0 %>
        <td></td>
<% else %>
        <td><%= event.map_url[0..20] %></td>
<% end %>
        <td><%= event.start_time %> - <%= event.end_time %></td>
<% if event.image_url.length > 21 %>
        <td><%= event.image_url[0..20] %>...</td>
<% elsif event.image_url.length == 0 %>
        <td></td>
<% else %>
        <td><%= event.image_url[0..20] %></td>
<% end %>
<% if event.description.length > 21 %>
        <td><%= event.description[0..20] %>...</td>
<% elsif event.description.length == 0 %>
        <td></td>
<% else %>
        <td><%= event.description[0..20] %></td>
<% end %>
<% if event.map_html.length > 21 %>
        <td><%= event.map_html[0..20] %>...</td>
<% elsif event.map_html.length == 0 %>
        <td></td>
<% else %>
        <td><%= event.map_html[0..20] %></td>
<% end %>
        <td><%= event.active %></td>
        <td><%=l event.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
